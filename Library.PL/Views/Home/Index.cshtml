@model Library.PL.ViewModel.BooksVM
<div class="container">
    <div class="text-center">
        @* <button class="btn btn-dark filter-button" data-filter="all"> All </button> *@
        <form asp-controller="Home" asp-action="Index" method="get">
            <input  type="search" id="searchInput" name="query" class="form-control" placeholder="Search...">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
       
    </div>
    <br />
    <div class="row">
        @foreach (var item in Model.Books)
        {
            <partial name="_BookItems" model="item"></partial>
        }
    </div>
</div>

