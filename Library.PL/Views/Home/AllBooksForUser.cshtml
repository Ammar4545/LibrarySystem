@model Library.PL.ViewModel.UserBooksVM
@inject IHttpContextAccessor httpContextAccessor;
@using Library_Utility;


@if (TempData["Message"] != null)
{
    @*     <div class="alert alert-danger">
        <p>@TempData["Message"]</p>
    </div>
 *@
    <script type="text/javascript">
        window.onload = function () {
            alert('@TempData["Message"]');
        };
    </script>
}

<div class="container">
    <br />
    <div class="row">
        @foreach (var item in Model.Books)
        {
           
                <div class="col-lg-4 col-md-6 pb-4 ">
                    <!-- Card-->
                    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222  ">
                        <div class="card-body px-3 pt-3 pb-1 row">
                            <div class="col-7"><label class="float-left">@item.Title</label></div>
                            @* <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}", @Model.Price)</span> </label> </div> *@
                        </div>
                        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@GlobalConst.ImagePath@item.Image" alt="Card image cap">
                        <div class="card-body p-1 px-3 row">
                            <input type="hidden" asp-for="@item.BookId" />
                            <div class="col-6">
                                <span class="badge p-2 border w-100" style="background-color:lavenderblush; color:black;">@item.Author</span>
                            </div>
                            <div class="col-6 border-0">
                                <span class="badge p-2 border w-100" style="background-color:aliceblue;color:black;">@item.Genre</span>
                            </div>

                            @* <div dis class="col-12 p-1 ">
                                <a asp-controller="Home" asp-action="ReturnBook" asp-route-id="@item.BookId"
                                   class="btn btn-dark form-control btn-sm p-2 " style="height:40px">Return Book</a>
                            </div> *@
                       
                        
                            <div dis class="col-12 p-1 ">
                            <a asp-controller="Home" asp-action="BorrowedBookDetails" asp-route-id="@item.BookId"
                                   class="btn btn-dark form-control btn-sm p-2 " style="height:40px">View Details</a>
                            </div>
                        

                        </div>
                    </div>
                </div>
            
        }
    </div>
</div>

