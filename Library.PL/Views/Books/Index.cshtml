@model IEnumerable<Library.DAL.Entities.Books>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Book
            </a>
        </div>
    </div>
    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <h3>@ViewBag.ErrorMessage</h3>
        }
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Genre
                    </th>
                   
                    <th>
                        Total Copies
                    </th>
                    <th>
                        Available Copies
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.Title</td>
                    <td width="15%">@obj.Author</td>
                    <td width="15%">@obj.Genre</td>
                    <td width="15%">@obj.TotalCopies</td>
                    <td width="15%">@obj.AvailableCopies</td>
                    <td width="15%">@obj.ISBN</td>
                    <td class="text-center">
                        <div class="w-75 btn-group text-center" role="group">
                            <a asp-controller="Books" asp-route-Id="@obj.BookId" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit">Edit</i>   
                            </a>
                                <a asp-controller="Books" asp-route-Id="@obj.BookId" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users exists.</p>
    }

</div>



