@model IEnumerable<Library.DAL.Entities.Users>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Users" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New User
            </a>
        </div>
    </div>
    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <h3>@ViewBag.ErrorMessage</h3>
        }
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.UserName</td>
                    <td width="20%">@obj.Email</td>
                     <td width="20%">@obj.Phone</td>
                    <td width="20%">@obj.Address</td>
                    
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit">Edit</i>   
                            </a>
                            <a asp-controller="Users" asp-route-Id="@obj.UserId" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users exists.</p>
    }

</div>
